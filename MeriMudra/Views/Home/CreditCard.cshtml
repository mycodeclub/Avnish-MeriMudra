        $(function () {
            var model = '@Html.Raw(Json.Encode(from u in  Model.Companys select new {value=u.CompanyName,id=u.CompanyId}))';
            var acList = JSON.parse(model);
            $('#ComapanyName').autocomplete({
                minLength: 2,
                source: function (request, response) {
                    var matches = $.map(acList, function (acItem) {
                        if (acItem.value.toUpperCase().indexOf(request.term.toUpperCase()) === 0) {
                            return acItem;
                        }
                    });
                    response(matches);
