    @{ string baseurl = "";
        if (HttpContext.Current.Request.ApplicationPath == "/")
        {
            baseurl = string.Format("{0}://{1}", HttpContext.Current.Request.Url.Scheme, HttpContext.Current.Request.Url.Authority);
        }
        else
        {
            baseurl = string.Format("{0}://{1}{2}", HttpContext.Current.Request.Url.Scheme, HttpContext.Current.Request.Url.Authority, HttpContext.Current.Request.ApplicationPath);
        }}
    <span style="display: none" id="baseURL">@baseurl</span>
