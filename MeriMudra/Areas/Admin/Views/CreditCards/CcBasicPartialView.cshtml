@model MeriMudra.Models.ViewModels.CreditCardViewModel
<div class="form-horizontal">
    <br />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="card mb-3">
        <div class="card-header">
            Credit Card Basic Information <label class="fa fa-edit btn btn-outline-secondary float-right" onclick="location.href='/Admin/CreditCards/SaveCcBasic/@Model.CardId'"> Edit </label>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-12 col-md-3 space">
                    @if (string.IsNullOrEmpty(Model.CardImageUrl))
                    {
                        Model.CardImageUrl = "/images/cards/card-1.png";
                    }
                    <img src="@Model.CardImageUrl" style="height:100%;width:100%;" class="pull-center img-responsive" alt="card Image" />
                </div>
                <div class="col-sm-12 col-md-9">
                    <div class="form-group">
                        @if (Model.CardId > 0)
                        {
                            Html.ActionLink("View", "Details", new { id = Model.CardId, @class = "fa fa-edit btn btn-outline-secondary float-right" });
                        }
                        <label> <b>Card Provider Bank: </b> </label>
                        <label>@Model.BankName</label>
                    </div>
                    <div class="form-group">
                        <label> <b>Card Name: </b> </label>
                        <label>@Model.CardName</label>
                    </div>
                    <div class="form-group">
                        <label><b>Card Description: </b></label>
                        <label> @Model.CardDescription </label>
                    </div>
                </div>
            </div>
            <br />           <h4>
                <u> Top reasons to get this Credit Card</u>
            </h4>
            <ul>
                @for (int i = 0; i < Model.ReasonsToGetThisCard.Count; i++)
                {
                    <li> @Model.ReasonsToGetThisCard[i] </li>
                }
            </ul>
        </div>
        <!-- Top reasons to get this Credit Card-->
    </div>
</div>
