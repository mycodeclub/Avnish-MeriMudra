@model IEnumerable<MeriMudra.Models.Bank>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@Html.AntiForgeryToken()
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="table-responsive">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LogoUrl)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.BankId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.BankId }) |
                    @*@Html.ActionLink("Delete", "Delete", new { id=item.BankId })*@
                    <a href="#" data-toggle="modal" data-target="#exampleDeleteBox" onclick="addActionInConfirmBox('Banks', 'Delete', @item.BankId);">Delete</a>
                </td>
            </tr>
        }

    </table>
</div>