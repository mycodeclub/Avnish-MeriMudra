@model List<MeriMudra.Models.City>
@{ string cityIds = ViewBag.selctedCitysList; }
<div class="card-body">
    <div class="row">
        @foreach (var item in Model)
        {
            string selected = cityIds.Split(',').Any(cId => cId.Equals(item.Id.ToString())) ? "checked" : string.Empty;
            <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="checkbox">
                    <label><input type="checkbox" name="cityIds" @selected value="@item.Id">@item.Name</label>
                </div>
            </div>
        }
    </div>
</div>